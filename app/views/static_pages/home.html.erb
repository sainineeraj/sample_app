<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Total Items for Sale</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to the Online Store of Second-hand Bikes</h1>

  <h2>
    This is the home page for the
    <a href="https://www.facebook.com/groups/CYCLOPBUYSELL">Cyclop Facebook Group</a>

  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("header.jpg", alt: "Cyclop"), 'http://cyclop.in' %>
<% end %>